# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGO_URL=mongodb://localhost:27017/blueai
DB_NAME=blueai

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# Email Service (Resend)
RESEND_API_KEY=your-resend-api-key-here

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Environment
ENVIRONMENT=development

# Azure AD Configuration (for Microsoft authentication)
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_BACKEND_CLIENT_ID=your-azure-backend-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# Google OAuth Configuration (for Google authentication)
GOOGLE_CLIENT_ID=your-google-oauth-client-id

# Azure Vision API (for OCR)
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_VISION_KEY=your-azure-vision-key

# LLM Service (for AI marking - optional, mocked if not provided)
EMERGENT_LLM_KEY=your-emergent-llm-key

# Cron Job Secret (for scheduled tasks)
CRON_SECRET=your-cron-secret
